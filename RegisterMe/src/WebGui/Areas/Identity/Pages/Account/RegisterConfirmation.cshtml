@page
@model WebGui.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Potvrzení registrace nového účtu";
}

<h1>@ViewData["Title"]</h1>

@switch (Model.DisplayConfirmAccountLink)
{
    case true:
        throw new Exception("This app does not currently have a real email sender registered, see <a href=\"https://aka.ms/aspaccountconf\">these docs</a> for how to configure a real email sender.\n            Normally this would be emailed: <a id=\"confirm-link\" href=\"@Model.EmailConfirmationUrl\">Click here to confirm your account</a>");
    default:
        <p>
            Zkontrolujte prosím svůj email (<b>včetně spamu</b>) a potvrďte registraci.
        </p>
        break;
}