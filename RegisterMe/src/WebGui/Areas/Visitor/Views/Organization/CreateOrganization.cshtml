@using Microsoft.AspNetCore.Mvc.TagHelpers
@using WebGui.Areas.Visitor.Controllers
@model RegisterMe.Application.Organizations.Dtos.CreateOrganizationDto

@{
    ViewBag.Title = "Zaregistrujte svou organizaci";
}

<div class="container mt-5">
    <div class="jumbotron text-center">
        <h1>Zaregistrujte svou organizaci</h1>
        <p class="lead">Chcete se zaregistrovat jako organizace?</p>
        <p>Vše je zdarma, stačí vyplnit základní údaje. My Vás kontaktujeme a zařadíme do databáze.</p>
        @if (User.Identity?.Name == null)
        {
            <button type="submit" class="btn btn-primary form-control " id="myButton">
                Pro zobrazení formuláře se prosím přihlašte.
            </button>
        }

        @if (User.Identity?.Name != null)
        {
            <form method="post" asp-controller="Organization" asp-action="CreateOrganization" class="row">

                <input asp-for="@Model.AdminId" type="hidden"/>
                <div class="row py-3 col-md-6 align-items-center justify-content-center">
                    <div class="form-floating col-md-4">
                        Název
                    </div>
                    <div class="form-floating col-md-8">
                        <input asp-for="@Model.Name" class="form-control"/>
                    </div>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="row py-3 col-md-6 align-items-center justify-content-center">
                    <div class="form-floating col-md-4">
                        Email
                    </div>
                    <div class="form-floating col-md-8">
                        <input asp-for="@Model.Email" class="form-control"/>
                    </div>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>

                <div class="row py-3 col-md-6 align-items-center justify-content-center">
                    <div class="form-floating col-md-4">
                        IČO
                    </div>
                    <div class="form-floating col-md-8">
                        <input asp-for="@Model.Ico" class="form-control"/>
                    </div>
                    <span asp-validation-for="@Model.Ico" class="text-danger"></span>
                </div>

                <div class="row py-3 col-md-6 align-items-center justify-content-center">
                    <div class="form-floating col-md-4">
                        Telefon
                    </div>
                    <div class="form-floating col-md-8">
                        <input asp-for="@Model.TelNumber" class="form-control"/>
                    </div>
                    <span asp-validation-for="@Model.TelNumber" class="text-danger"></span>
                </div>


                <div class="row py-3 col-md-6 align-items-center justify-content-center">
                    <div class="form-floating col-md-4">
                        Webová stránka
                    </div>
                    <div class="form-floating col-md-8">
                        <input asp-for="@Model.Website" class="form-control"/>
                    </div>
                    <span asp-validation-for="@Model.Website" class="text-danger"></span>
                </div>


                <div class="row py-3 col-md-6 align-items-center justify-content-center">
                    <div class="form-floating col-md-4">
                        Adresa
                    </div>
                    <div class="form-floating col-md-8">
                        <input asp-for="@Model.Address" id="autocomplete" class="form-control"/>
                    </div>
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>

                @Html.ValidationMessage(BaseController.CommandValidation, new { @class = "text-danger" })

                <button type="submit" class="btn btn-primary form-control " id="myButton">
                    Odeslat poptávku
                </button>
            </form>
        }
    </div>
</div>

@section scripts {
    <partial name="../_OrganizationScriptPartial"/>
}