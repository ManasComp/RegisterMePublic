@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var showBanner = !consentFeature?.CanTrack ?? false;
    var cookieString = consentFeature?.CreateConsentCookie();
}

@if (showBanner)
{
    <div id="cookieConsent" class="alert alert-info alert-dismissible fade show" role="alert">
        Shromažďjeme pouze nezbytná data, sdílíme je pouze s organizátorem výstavy - <a asp-area="Visitor"
                                                                                        asp-controller="Home"
                                                                                        asp-action="Privacy">zjistit
            více</a>.
        <button type="button" class="accept-policy close btn btn-primary" data-bs-dismiss="alert" aria-label="Close"
                data-cookie-string="@cookieString">
            <span aria-hidden="true">Souhlasím</span>
        </button>
    </div>
    <script>
        (function () {
            const button = document.querySelector("#cookieConsent button[data-cookie-string]");
            button.addEventListener("click", function (event) {
                document.cookie = button.dataset.cookieString;
            }, false);
        })();
    </script>
}